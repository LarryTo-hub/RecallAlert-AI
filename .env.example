# General / Safety settings
# When ALLOW_SEND is false the notifier will only log messages (dry-run).
# If set to true, SMS / email sends may be performed depending on notifier code.
ALLOW_SEND=true
# App logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO


# SMTP â€” Gmail App Password (used for recall email alerts)
# 1. Enable 2-Step Verification on your Google account.
# 2. Go to https://myaccount.google.com/apppasswords and generate an App Password.
# 3. Paste the 16-character App Password (no spaces) into SMTP_PASS below.
# 4. SMTP_USER must be the Gmail address that owns the App Password.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@gmail.com  #FILL THIS OUT (REMOVE BEFORE COMITTING)
SMTP_PASS=your-16-char-app-password  #FILL THIS OUT (REMOVE BEFORE COMITTING)


# LLM / AI provider (Gemini)
# Do NOT commit real API keys to the repo
# MODEL_PROVIDER controls which provider src/agent.py uses.
MODEL_PROVIDER=gemini
GEMINI_API_KEY=  #FILL THIS OUT (REMOVE BEFORE COMITTING)
GEMINI_MODEL=gemini-2.0-flash


# Database
# For local dev a SQLite file is fine. For production use Postgres or MySQL and set a proper URL.
# Examples:
#   sqlite: sqlite:///recalls.db
#   postgres: postgresql://user:pass@host:5432/recalls
DATABASE_URL=sqlite:///recalls.db


# Test recipient for scripts/test_recall_alert.py
TEST_EMAIL=you@gmail.com  #FILL THIS OUT (REMOVE BEFORE COMITTING)
# To test that the SMTP works correctly, run "python scripts/test_recall_alert.py"